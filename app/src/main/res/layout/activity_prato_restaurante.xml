<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.PratoRestauranteActivity">

  <ImageView
      android:id="@+id/ivPratoActivityPhoto"
      android:layout_width="match_parent"
      android:layout_height="220sp"
      android:src="@drawable/ic_launcher_background"
      android:scaleType="centerCrop"
      android:alpha="0.4"
      android:contentDescription="@string/imagem_restaurante"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageButton
      android:id="@+id/backButtonPrato"
      style="@style/BackButtonDefault"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="30dp"/>

  <TextView
      android:id="@+id/tvPratoActivityName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Nome Prato"
      android:textSize="36dp"
      android:textAppearance="?attr/textAppearanceHeadline6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/ivPratoActivityPhoto"
      android:layout_margin="8dp"
      />

  <TextView
      android:id="@+id/tvPratoActivityDescricao"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Texto Descritivo"
      android:textSize="24dp"
      android:textAppearance="?attr/textAppearanceHeadline6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivPratoActivityPhoto"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="20dp"
      />



</androidx.constraintlayout.widget.ConstraintLayout>